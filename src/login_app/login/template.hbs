<img src="/static/images/BG_login.jpg" class="login-img" alt="PS" />
<div class="bg-login"></div>
<div class="container">
  <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

    <img src="/static/images/icon_logo_PSL.png" class="center-block login-logo" alt="PS" />

    <div class="panel">
      <div class="panel-heading">
        <div class="alert alert-error" style="display:none;">
          <div class="panel-title">Entry</div>
        </div>
        <div class="panel-body">
          <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
          <form role="form" id="loginform" class="col-sm-9 col-sm-offset-2">
            <div class="form-group login">
              <input id="login-username" type="text" class="form-control " name="username" value="" placeholder="Username">
            </div>
            <div class="form-group login">
              <input id="login-password" type="password" class="form-control " name="password" placeholder="Password">
            </div>
            <div class="form-group recovery" style="display:none;">
              <label for="">Please enter your email to reset your password</label>
              <input id="login-email" type="email" class="form-control" name="email" placeholder="Email">
            </div>
            <div class="has-spinner">
              <button id="btn-login" href="#" class="btn btn-login login">LOGIN </button>
              <button id="btn-recovery" href="#" class="btn btn-login recovery" style="display:none;">Reset Password</button>
            </div>
          </form>
        </div>
        <br>
        <a id="link-email">
           <div class="pull-right link-email login" style="margin-top: -21px;margin-right: 71px;text-decoration: none;cursor: pointer;">Forgot password?</div>
        </a>​
        <a id="back-login" >
            <div class="pull-right link-email recovery" style="display:none;margin-top: -21px;margin-right: 71px;text-decoration: none;cursor: pointer;">Back to login</div>
        </a>​
      </div>
    </div>
  </div>
  <div id="flashes"></div>
