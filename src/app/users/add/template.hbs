<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <article class="card">

      <div class="card-block">
        <div class="row">
          <div class="col-md-12">
            <div class="card-title">
              <h4> {{$t 'user.form.add-title'}}
                <img class="pull-right" src="/static/images/icon_more.png">
              </h4>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="margin-tb-35px" id="img-cam">
              <img id="image-logo" class="card-img-top img-responsive center-block select-file"
                   src="/static/images/icon_user_grey.png" alt=""/>
              <p id="image-logo-text" class="text-center select-file">{{$t 'user.form.user-label'}}</p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">

            <div class="fp-form-container padding-b-30px" id="add-organization">
              <form data-toggle="validator" role="form" class="form-vertical" id="form">
                <div class="form-group">
                  <input type="text" name="username" value="{{user.username}}" placeholder="* {{$t 'user.form.username'}}"
                         class="input-bg-gray form-control" required>
                </div>
                <div class="form-group">
                  <input type="email" name="email" value="{{user.email}}" placeholder="* {{$t 'user.form.email'}}"
                         class="input-bg-gray form-control" required>
                </div>
                <div class="form-group">
                  <input type="password" name="pass" value="{{user.pass}}" placeholder="* {{$t 'user.form.password'}}"
                         class="input-bg-gray form-control" required>
                </div>
                <div class="form-group">
                  <input type="password" name="password-confirm" value="" placeholder="* {{$t 'user.form.password-confirm'}}"
                         class="input-bg-gray form-control" required>
                </div>
                <div class="form-group">
                  <select id="select-app" name="application" class="input-bg-gray form-control" style="display: none;">
                    <option id="select-app-placeholder" selected disabled></option>
                  </select>
                  <select id="select-org" name="organization" class="input-bg-gray form-control" style="display: none;">
                    <option id="select-org-placeholder" selected disabled></option>
                  </select>
                </div>
                <div class="form-group">
                  <select id="select-role" name="role" class="form-control">
                    <option id="select-role-placeholder" selected disabled></option>
                  </select>
                </div>

                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-12">
                      <button type="submit" name="register-submit" id="submit" class="btn" value="Save">{{$t 'user.form.buttons.add'}}</button>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <div class="text-center">
                    <a href="#users" id="cancel" tabindex="5" class="">{{$t 'user.form.buttons.cancel'}}</a>
                  </div>
                </div>

              </form>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>
