<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <article class="card">

      <div class="card-block">
        <div class="row">
          <div class="col-md-12">
            <div class="card-title">
              <h4>
                  {{$t 'user.formedit.edit-title'}}
                <img class="pull-right" src="/static/images/icon_more.png">
              </h4>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="margin-tb-35px" id="img-cam">
              <img id="image-logo" class="card-img-top img-responsive center-block select-file"
                   src="/static/images/icon_user_grey.png" alt=""/>
              <p id="image-logo-text" class="text-center select-file">{{$t 'user.formedit.user-label'}}</p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">

            <div class="fp-form-container padding-b-30px" id="add-organization">
              <form data-toggle="validator" role="form" class="form-vertical" id="formedit">
                <div class="form-group">
                  <input type="text" name="username" value="{{user.username}}" placeholder="* {{$t 'user.formedit.username'}}"
                         class="input-bg-gray form-control" required  readonly >
                </div>
                <div class="form-group">
                  <input type="email" name="email" value="{{user.email}}" placeholder="* {{$t 'user.formedit.email'}}"
                         class="input-bg-gray form-control" required>
                </div>

                <div class="form-group">
                  <label>Active</label>
                  <input type="checkbox" name="active" {{#if isChecked}} checked {{/if}}
                         class="input-bg-gray form-control"  >
                </div>

                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-12">
                      <button type="submit" name="register-submit" id="submit" class="btn" value="Save">{{$t 'general.buttons.ok'}}</button>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <div class="text-center">
                    <a href="#management/users" id="cancel" tabindex="5" class="">{{$t 'general.buttons.cancel'}}</a>
                  </div>
                </div>

              </form>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>
