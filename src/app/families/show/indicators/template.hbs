<!--div class="text-xs-right pull-right"     style="text-align: right;"-->

  <div class="pull-right">

    <button class="btn btn-primary" id="save-indicators" > {{$t 'survey.priority.buttons.save'}}
    </button>

  </div>
  <button class="btn btn-secondary" id="exit-indicators"> {{$t 'survey.priority.buttons.cancel'}}</button>
  <!--/div-->
<li class="list-group-item" id="{{ header.data.snapshot_indicator_id }}">

  <div class="text-center">
    <h2 class="title-gray">{{$t 'survey.summary.family'}} {{ header.data.family.person.lastName }}</h2>
  </div>

  <hr/>

  <div class="header-indicators-snapshot">
    <h3 class="pull-left"> {{$t 'survey.summary.snapshot'}} {{ header.date }} </h3>
    <div class="pull-right header-resume">
      <p>{{ header.data.count_red_indicators}}</p>
      <div class="circle-header red " />
      <p>{{ header.data.count_yellow_indicators}}</p>
      <div class="circle-header yellow " />
      <p>{{ header.data.count_green_indicators}}</p>
      <div class="circle-header green " />

    </div>

  </div>
  <br/>
  <hr/>
  <div class="row indicator-list">
    <div class="">
    {{#each data}}
    <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4 indicator-circle-snapshot">
      <div id="circle" class="circle-content {{ this.classNames }} {{this.priority}}" data-toggle="tooltip" title="{{$t 'survey.priority.messages.select'}}" />
      <p id="indicator-name">{{ this.name }}</p>
      <p hidden id="indicator-value">{{ this.value }}</p>
    </div>
    {{/each}}
  </div>
  </div>

  <h3 class="{{this.tablePriorityClassNames}} tableTitle" style="font-weight: bold" >{{$t 'survey.priority.title'}} </h3>
  <table class="table table-hover margin bottom center {{this.tablePriorityClassNames}}" id="prioritiesTable">
    <thead class="thead-light">
      <tr>
        <th class="col-md-3">{{$t 'survey.priority.add.indicator'}}</th>
        <th class="col-md-3">{{$t 'survey.priority.add.reason'}}</th>
        <th class="col-md-3">{{$t 'survey.priority.add.action'}}</th>
        <th class="col-md-3">{{$t 'survey.priority.add.estimated-date'}}</th>

      </tr>
    </thead>
    <tbody id="tbodypriorities">
      {{#each priorities}}
        {{^if this.is_attainment}}
          <tr>
            <td> {{this.indicator}}</td>
            <td> {{this.reason}}</td>
            <td> {{this.action}}</td>
            <td> {{this.estimated_date}}</td>
            <td style="text-align: center;"> <a id="delete"  class="btn btn-danger right noPrint" data-id="{{ this.snapshot_indicator_priority_id }}"
              data-toggle="tooltip" title="{{$t 'survey.priority.messages.select-delete'}}">
              <span class="glyphicon glyphicon-trash pull-right"></span>
            </a> </td>
          </tr>
        {{/if}}
      {{/each}}

    </tbody>
  </table>

  <h3 class="{{this.tableAchievedClassNames}} tableTitle" style="font-weight: bold" >{{$t 'survey.attainment.title'}}</h3>
  <table class="table table-hover margin bottom center {{this.tableAchievedClassNames}}" id="achievedTable">
    <thead class="thead-light">
      <tr>
        <th class="col-md-6">{{$t 'survey.priority.add.indicator'}}</th>
        <th class="col-md-6"> {{$t 'survey.priority.add.comments'}}</th>
      </tr>
    </thead>
    <tbody id="tbodypriorities">
      {{#each priorities}}
        {{#if this.is_attainment}}
          <tr>
            <td> {{this.indicator}}</td>
            <td> {{this.reason}}</td>
            <td style="text-align: center;"> <a id="delete"  class="btn btn-danger right noPrint" data-id="{{ this.snapshot_indicator_priority_id }}"
              data-toggle="tooltip" title="Remove this priority">
              <span class="glyphicon glyphicon-trash pull-right"></span>
            </a> </td>
          </tr>
        {{/if}}
      {{/each}}

    </tbody>
  </table>


</li>

<div id="modal-region">
</div>
