<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <article class="card">

      <div class="card-block">
        <div class="row">
          <div class="col-md-12">
            <div class="card-title">
              <h4> {{$t 'organization.form.add-title'}}
                <img class="pull-right" src="/static/images/icon_more.png">
              </h4>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="margin-tb-35px" id="img-cam">
              <img id="image-logo" class="card-img-top img-responsive center-block select-file" src="/static/images/icon_camara.png" alt="" />
              <p id="image-logo-text" class="text-center select-file">{{$t 'organization.form.logo-upload'}}</p>
              <div class="form-group">
                <input value="{{organization.image}}" id="input-image-file" type="file" class="form-control" name="image" style="display: none;">
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <div class="fp-form-container padding-b-30px" id="add-organization">
              <form data-toggle="validator" role="form" class="form-vertical" id="form">
                <div class="alert alert-warning" style="display:none">
                  <strong>Attention! All the fields with * are mandatory</strong>
                </div>
                <div class="form-group">
                  <input value="{{organization.name}}" type="text" name="name" value="" placeholder="{{$t 'organization.form.name'}}"
                         class="input-bg-gray form-control" required>
                </div>
                <div class="form-group">
                  <input value="{{organization.code}}" type="text" name="code" placeholder="{{$t 'organization.form.code'}}"
                         class="input-bg-gray form-control" required>
                </div>
                <div class="form-group">
                  <input value="{{organization.description}}" type="text" name="description" placeholder="{{$t 'organization.form.description'}}"
                         class="input-bg-gray form-control" required>
                </div>
                <div class="form-group">
                  <input value="{{organization.information}}" type="text" name="information" placeholder="{{$t 'organization.form.information'}}"
                         class="input-bg-gray form-control" required>
                </div>

                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-12">
                      <button type="submit" name="register-submit" id="submit" class="btn" value="Save">{{$t 'organization.form.buttons.add'}}</button>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="text-center">
                    <a href="#organizations" id="cancel" tabindex="5" class="">{{$t 'organization.form.buttons.cancel'}}</a>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>
