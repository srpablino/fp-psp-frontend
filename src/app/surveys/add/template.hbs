<div >
  <div class="col-md-10 col-md-offset-1">
    <div class="panel fp-form-container">
      <div class="panel-heading">
        <div >
          <h1>{{$t 'survey.add.main-title'}}</h1>
        </div>
        <hr>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <form data-toggle="validator" role="form" class="form-vertical" id="form">
              <div class="form-group">
                <input value="{{survey.title}}" type="text" class="form-control inputdisable" id="title" name="title" value="" placeholder="{{$t 'survey.add.title-placeholder'}}"  required>
              </div>
              <div class="form-group">
                <input value="{{survey.description}}" type="text" class="form-control inputdisable" name="description" id="description" placeholder="{{$t 'survey.add.short-desc-placeholder'}}"
                  required >
              </div>
              <div class="form-group">
                  <select class="form-control" id="organization" multiple="multiple" style="width: 100%;" placeholder="{{$t 'survey.add.assign-survey-placeholder'}}" ></select>
              </div>
              <div class="form-group">
                <div class="panel panel-default" onLoad="text_editor();">
                  <div class="panel-heading">
                    <ul class="nav nav-pills" id="heading">
                      <li>{{$t 'survey.add.json-schema'}}</li>
                    </ul>
                  </div>
                  <textarea id="schema-editor" name="survey_schema"  class="form-control"></textarea>
                </div>
              </div>
              <div class="form-group">
                <div class="panel panel-default" onLoad="text_editor();">
                  <div class="panel-heading">
                    <ul class="nav nav-pills" id="heading">
                      <li>{{$t 'survey.add.json-ui-schema'}}</li>
                    </ul>
                  </div>
                  <textarea id="schema-ui-editor" name="survey_ui_schema" class="form-control"></textarea>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3">
                    <button type="submit" name="register-submit" id="submit" tabindex="4" class="btn" value="Save">{{$t 'survey.add.buttons.save'}}</button>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="text-center">
                      <a href="#surveys" id="cancel" class="" tabindex="5">{{$t 'survey.add.buttons.cancel'}}</a>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
