
<div class="card-item">
  <article class="card">
    <div class="card-block">
      <div class="row card-title">
        <p class="text-left text-blue">{{survey.title}}</p>
      </div>
      <a class="answer-area" href="#">
        <div class="row card-description">
          <p class="card-text">{{survey.description}}</p>
          <h5 class="card-text-sub-title text-blue">{{$t 'survey.contains'}}:</h5>
          <p class="card-text">{{count_indicators}} {{$t 'survey.indicators'}}</p>
          <p class="card-text-small"><span class="text-blue">{{$t 'survey.created'}}: </span><span>{{survey.created_at}}</span></p>
        </div>
      </a>
      <div class="row card-menu">
        <div class="col-md-6 col-xs-6">
          <a class="card-menu-item card-menu-edit delete-survey-btn" href="#surveys/{{survey.id}}/edit"></a>
        </div>
        <div class="col-md-6 col-xs-6">
          <a class="card-menu-item card-menu-delete delete-survey-btn" href="#" style="display: none"></a>
        </div>
      </div>
    </div>
  </article>
</div>
